<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/PrimaryColor"
    android:elevation="@dimen/elevationbar"
    app:menu="@menu/menu_opciones">

    <ImageView
        android:id="@+id/imgicono"
        android:layout_width="@dimen/icono"
        android:layout_height="@dimen/icono"
        android:contentDescription="@string/icono"
        android:src="@drawable/huella1"></ImageView>

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/titulo"
        android:textSize="@dimen/letraIcono"
        android:textStyle="italic"></TextView>

