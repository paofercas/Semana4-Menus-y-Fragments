<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota2"
    android:layout_width="@dimen/card_view"
    android:layout_height="@dimen/card_view"
    app:cardCornerRadius="@dimen/corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <ImageView
            android:id="@+id/imgMascota"
            android:layout_width="@dimen/card_view_detail"
            android:layout_height="@dimen/card_view_detail"
            android:background="@color/amarillo"
            android:contentDescription="@string/mascota"
            android:src="@drawable/dog2"
            android:layout_gravity="center"></ImageView>

        <TextView
            android:id="@+id/txtTotalLike"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/hueso_amarillo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/drawable_padding"
            android:text="@string/totalLikes"
            android:textSize="@dimen/letraIcono"
            android:textStyle="bold"
            app:drawableRightCompat="@drawable/icons8_dog_bone_100"></TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>